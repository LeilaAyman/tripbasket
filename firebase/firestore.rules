rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /trips/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if false;
    }

    match /users/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && request.auth.uid == document;
      allow write: if request.auth != null && request.auth.uid == document;
      allow delete: if request.auth != null && request.auth.uid == document;
    }
    
    match /cart/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && resource.data.userReference == /databases/$(database)/documents/users/$(request.auth.uid);
      allow write: if request.auth != null && resource.data.userReference == /databases/$(database)/documents/users/$(request.auth.uid);
      allow delete: if request.auth != null && resource.data.userReference == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /bookings/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && resource.data.user_reference == /databases/$(database)/documents/users/$(request.auth.uid);
      allow write: if request.auth != null && resource.data.user_reference == /databases/$(database)/documents/users/$(request.auth.uid);
      allow delete: if request.auth != null && resource.data.user_reference == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /reviews/{document} {
      allow create: if request.auth != null;
      allow read: if true;
      allow write: if request.auth != null && 
        (resource == null || resource.data.user_reference == /databases/$(database)/documents/users/$(request.auth.uid));
      allow delete: if request.auth != null && resource.data.user_reference == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /agency_reviews/{document} {
      allow create: if request.auth != null;
      allow read: if true;
      allow write: if request.auth != null && 
        (resource == null || resource.data.user_reference == /databases/$(database)/documents/users/$(request.auth.uid));
      allow delete: if request.auth != null && resource.data.user_reference == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /agency/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if false;
    }

    // Favorites collection - simple owner-only access
    match /favorites/{favId} {
      allow read, write, delete: if request.auth != null && 
        (resource == null || resource.data.user_reference == /databases/$(database)/documents/users/$(request.auth.uid));
      allow create: if request.auth != null && request.resource.data.user_reference == /databases/$(database)/documents/users/$(request.auth.uid);
    }
  }
}
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() { return request.auth != null; }
    function isOwner(uid) { return request.auth != null && request.auth.uid == uid; }

    // Allow only the owner (and admins via custom claim) to read/write their KYC file
    match /users/{uid}/kyc/{fileName} {
      allow write: if isSignedIn() && isOwner(uid)
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/(jpeg|jpg|png)');
      allow read: if isOwner(uid) || (request.auth.token.admin == true);
    }

    // Allow profile photo uploads for authenticated users
    match /profile_photos/{fileName} {
      allow write: if isSignedIn()
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/(jpeg|jpg|png)')
        && fileName.matches('.*' + request.auth.uid + '.*');
      allow read: if isSignedIn();
    }

    // Allow trip images for authenticated users (agencies and admins)
    match /trips/{agencyId}/images/{fileName} {
      allow write: if isSignedIn()
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/(jpeg|jpg|png|webp)');
      allow read: if true; // Public read access for trip images
    }

    // Allow trip gallery images for authenticated users (agencies and admins)
    match /trips/{agencyId}/gallery/{fileName} {
      allow write: if isSignedIn()
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/(jpeg|jpg|png|webp)');
      allow read: if true; // Public read access for trip gallery images
    }

    // Allow user profile images
    match /users/{uid}/profile/{fileName} {
      allow write: if isSignedIn() && isOwner(uid)
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/(jpeg|jpg|png|webp)');
      allow read: if true; // Public read access for profile images
    }
  }
}